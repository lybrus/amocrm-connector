root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
charset = utf-8
spaces_around_brackets = inside

[*.yml]
indent_size = 2

[{*.js,ts}]
ij_javascript_use_semicolon_after_statement = false
ij_typescript_use_semicolon_after_statement = false
